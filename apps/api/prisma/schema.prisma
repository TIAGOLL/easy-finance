datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model users {
  id             String     @id @unique @default(uuid())
  name           String
  email          String     @unique
  password       String
  email_verified Boolean    @default(false)
  created_at     DateTime?  @default(now())
  updated_at     DateTime?  @updatedAt
  token          tokens[]
  accounts       accounts[]
  Tasks          Tasks[]
}

enum token_type {
  PASSWORD_RECOVER
}

model tokens {
  id         String     @id @default(uuid())
  type       token_type
  created_at DateTime   @default(now())
  user_id    String

  user users @relation(fields: [user_id], references: [id])

  @@index([user_id])
}

enum account_providers {
  GOOGLE
}

model accounts {
  id                  String            @id @default(uuid())
  provider            account_providers
  provider_account_id String            @unique

  user    users  @relation(fields: [user_id], references: [id])
  user_id String

  @@unique([provider, user_id])
  @@index([user_id])
}

enum role {
  ADMIN
  MEMBER
  BILLING
}

model Tasks {
  id         String    @id @unique @default(uuid())
  name       String
  created_at DateTime? @default(now())
  updated_at DateTime? @updatedAt

  user    users  @relation(fields: [user_id], references: [id])
  user_id String

  @@index([user_id])
}
