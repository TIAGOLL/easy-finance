{
  "version": 2,
  "builds": [
    {
      "src": "/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "18.x",
        "packageManager": "pnpm",
        "installCommand": "cd ../..; pnpm install --filter api... --frozen-lockfile",
        "buildCommand": "db:migrate:deploy; pnpm generate; cd ../..; pnpm build:api",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "(.*)",
      "dest": "/src/main.ts"
    }
  ]
}