{
  "version": 2,
  "builds": [
    {
      "src": "src/main.ts",
      "use": "@vercel/node",
      "config": {
        "nodeVersion": "18.x",
        "packageManager": "pnpm",
        "installCommand": "pnpm install --no-frozen-lockfile",
        "buildCommand": "pnpm db:migrate:deploy; pnpm generate; pnpm db:sync; pnpm build",
        "outputDirectory": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "src/main.ts",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "DELETE",
        "PATCH"
      ]
    }
  ]
}
