{
  "name": "api",
  "version": "0.0.0",
  "private": true,
  "type": "commonjs",
  "packageManager": "pnpm@9.15.1",
  "scripts": {
    "dev": "pnpm env:load nest start --watch",
    "build": "pnpm db:migrate:deploy -- pnpm generate -- nest build",
    "start": "pnpm env:load node dist/src/main.js",
    "start:dev": "nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "db:migrate:deploy": "pnpm env:load prisma migrate deploy",
    "db:migrate:dev": "pnpm env:load prisma migrate dev",
    "db:push": "pnpm env:load prisma db push",
    "db:pull": "pnpm env:load prisma db pull",
    "db:seed": "pnpm env:load tsx src/prisma/seed.ts",
    "db:sync": "pnpm env:load npx @snaplet/seed sync",
    "generate": "pnpm env:load prisma generate",
    "studio": "pnpm env:load prisma studio --browser none",
    "env:load": "dotenv -e ../../.env --"
  },
  "dependencies": {
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.0.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/jwt": "^10.1.0",
    "@nestjs/passport": "^10.0.1",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.1.0",
    "@prisma/client": "^6.2.1",
    "@snaplet/seed": "^0.98.0",
    "@vitest/coverage-v8": "^2.1.8",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "nodemailer": "^6.9.16",
    "passport-jwt": "^4.0.1",
    "pnpm": "^9.15.3",
    "prisma": "^6.2.1",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1",
    "swagger-ui-express": "^5.0.1",
    "tsup": "^8.3.5",
    "zod": "^3.22.2",
    "zod-validation-error": "^1.5.0"
  },
  "devDependencies": {
    "@easyfinance/api-types": "workspace:*",
    "@easyfinance/eslint-config": "workspace:*",
    "@easyfinance/prettier-config": "workspace:*",
    "@easyfinance/typescript-config": "workspace:*",
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@rocketseat/eslint-config": "^2.1.0",
    "@snaplet/copycat": "^5.1.1",
    "@swc/core": "^1.10.1",
    "@types/bcryptjs": "^2.4.2",
    "@types/express": "^4.17.17",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/passport-jwt": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "dotenv-cli": "^7.4.1",
    "source-map-support": "^0.5.21",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3",
    "unplugin-swc": "^1.5.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "prettier": "@easyfinance/prettier-config",
  "eslintConfig": {
    "extends": [
      "@easyfinance/eslint-config/nest"
    ]
  }
}
