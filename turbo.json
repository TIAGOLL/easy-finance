{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "env": [
        "DATABASE_URL",
        "JWT_PRIVATE_KEY",
        "JWT_PUBLIC_KEY",
        "PORT",
        "HOST_EMAIL_SENDER",
        "PORT_EMAIL_SENDER",
        "USER_EMAIL_SENDER",
        "PASS_EMAIL_SENDER",
        "APP_NAME",
        "API_URL",
        "WEB_URL"
      ],
      "dependsOn": [
        "^build"
      ],
      "outputs": ["dist/**", "apps/api/dist/**", "apps/web/dist/**"]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}